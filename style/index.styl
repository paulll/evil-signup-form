@font-face {
	name DejavuSans
	src url('ttf/DejaVuSans.ttf')
}

@font-face {
	name DejavuSansMono
	src url('ttf/DejaVuSansMono.ttf')
}

html, body
	width 100%
	height 100%
	margin 0

body
	display flex
	align-items center
	justify-content center
	background #1c1c1c

	form
		display flex
		flex-direction column
		padding 30px
		background white
		line-height 2

		.input-wrap
			padding 5px
			display flex

			label
				font-family DejavuSans
				font-size 13px
				flex-grow 1
				padding 10px 15px

			input
				padding 10px 15px

		button
			padding 10px 15px
			flex-grow 1

	#header
		white-space normal
		font-family DejavuSansMono
		font-weight bold
		font-size 17px
		padding 10px

		span
			opacity 0.5

	#output
		line-height 1
		max-width 300px
		white-space normal
		font-family DejavuSansMono
		font-weight bold

	#link
		padding 20px 4px 0px
		line-height 1
		white-space normal
		font-family DejavuSansMono
		cursor pointer
		opacity 0.5
		text-align right
		&:hover
			opacity 1
			text-decoration underline
