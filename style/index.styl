html, body
	width 100%
	height 100%
	margin 0

body
	display flex
	align-items center
	justify-content center
	background #1c1c1c

	form
		display flex
		flex-direction column
		padding 30px
		background white
		line-height 2

		.input-wrap
			padding 5px
			display flex

			label
				font-family sans-serif
				font-size 13px
				flex-grow 1
				padding 0 5px

		button
			flex-grow 1

	#output
		line-height 1
		max-width 300px
		white-space normal
		font-family monospace
		font-weight bold
